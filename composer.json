{
  "name": "mistyfiky/php-simple-template",
  "type": "template",
  "autoload": {
    "classmap": [
      "src/"
    ]
  },
  "autoload-dev": {
    "classmap": [
      "tests/"
    ]
  },
  "require-dev": {
    "phpunit/phpunit": "^11"
  },
  "config": {
    "platform": {
      "php": "8.2.16"
    }
  },
  "scripts": {
    "post-root-package-install": [
      "@composer config name you/should-change-this",
      "@composer config type project",
      "rm README.md",
      "@composer config --unset scripts.post-root-package-install"
    ],
    "test": "./vendor/bin/phpunit --testdox tests"
  }
}
